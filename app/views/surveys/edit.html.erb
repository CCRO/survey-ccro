<h1><%= @survey.name %></h1>


<div>
	<% @survey.questions.each do |question| %>
  		<p><%= question.prompt %></p>
		<% question.answers.each do |a| %>
  			<%= radio_button_tag a, a %><%= a.option %><br />
		<% end %>
  		<%= link_to "Delete", question_path(question), :method => "delete" %>
	<% end %>
</div>

<br />
<br />



<%= link_to "New Question", :controller => "questions", :action => "new", :survey_id => @survey.id %>

