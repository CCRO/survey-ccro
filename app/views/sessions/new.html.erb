<p id="notice"><%= notice %></p>
  <%= form_tag sessions_path, {:class => 'well span4 offset3', :method => 'post'} do %>
    <div class="field">
      <%= label_tag :email %><br />
      <%= text_field_tag :email, nil, :placeholder => "your@email.com" %>
    </div>
    <div class="field">
      <%= label_tag :password %><br />
      <%= password_field_tag :password %>
    </div>

    <div class="actions"><%= submit_tag "Log In", :class => "btn" %></div>
  <% end%>
  <div style="clear:both;"></div>
