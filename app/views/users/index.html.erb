<h1>Listing users</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Name</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td>
      <%= form_for user, :remote => true do |f| %>
        <%= f.hidden_field :id %>
        <%= f.check_box :admin %>
      <% end %>
    </td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

